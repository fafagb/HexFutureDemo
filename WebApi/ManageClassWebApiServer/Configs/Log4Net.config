<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <!--日志记录组建配置-->
  <log4net>
    <appender name="KafkaAppender" type="log4net.Kafka.KafkaAppender, log4net.Kafka">
      <KafkaSettings>
        <broker value="" />
        <topic value="" />
      </KafkaSettings>
      <!--日志记录格式-->
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%r] [%t] %-5p %c  - %m%n%n" />
      </layout>
    </appender>
    <!--正常消息写入到文件-->
    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件保存目录-->
      <file value="log/logInfo" />
      <!--是否覆盖 当文件存在是否追加到文件-->
      <appendToFile value="true" />
      <!--设置无限备份=-1 ，最大备份数为1000-->
      <maxSizeRollBackups value="1000" />
      <!--每个文件的最大20k-->
      <maximumFileSize value="1MB" />
      <!--名称是否可以更改 为false为可以更改-->
      <param name="StaticLogFileName" value="false" />
      <!--文件命名方式-->
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;" />
      <param name="RollingStyle" value="Date" />
      <!--日志记录格式-->
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%r] [%t] %-5p %c  - %m%n%n" />
      </layout>
    </appender>
    <!--警告消息写入到文件-->
    <appender name="WarnAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件保存目录-->
      <file value="log/logWarn" />
      <!--是否覆盖 当文件存在是否追加到文件-->
      <appendToFile value="true" />
      <!--设置无限备份=-1 ，最大备份数为1000-->
      <maxSizeRollBackups value="1000" />
      <!--每个文件的最大20k-->
      <maximumFileSize value="1MB" />
      <!--名称是否可以更改 为false为可以更改-->
      <param name="StaticLogFileName" value="false" />
      <!--文件命名方式-->
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;" />
      <param name="RollingStyle" value="Date" />
      <!--日志记录格式-->
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%r] [%t] %-5p %c  - %m%n%n" />
      </layout>
    </appender>
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件保存目录-->
      <file value="log/logError" />
      <!--是否覆盖 当文件存在是否追加到文件-->
      <appendToFile value="true" />
      <!--设置无限备份=-1 ，最大备份数为1000-->
      <maxSizeRollBackups value="1000" />
      <!--每个文件的最大20k-->
      <maximumFileSize value="1MB" />
      <!--名称是否可以更改 为false为可以更改-->
      <param name="StaticLogFileName" value="false" />
      <!--文件命名方式-->
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;" />
      <param name="RollingStyle" value="Date" />
      <!--日志记录格式-->
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%r] [%t] %-5p %c  - %m%n%n" />
      </layout>
    </appender>
    <!--异常消息发送邮件-->

    <logger name="errorinfo">
      <level value="ERROR" />
      <appender-ref ref="ErrorAppender" />
    </logger>
    <logger name="loginfo">
      <level value="INFO" />
      <appender-ref ref="InfoAppender" />
      <!--<appender-ref ref="KafkaAppender" />-->
    </logger>
    <logger name="warninfo">
      <level value="WARN" />
      <appender-ref ref="WarnAppender" />
      <!--<appender-ref ref="KafkaAppender" />-->
    </logger>
    <root>
      <level value="ALL" />
    </root>
  </log4net>
</configuration>